[Unit]
Description="Service file for Monad MPT"
After=network.target

[Service]
Type=oneshot
ExecStart=/home/ubuntu/monad-single-node/monad_mpt \
    --storage /dev/triedb \
    --create
User=ubuntu
Group=ubuntu
Restart=no
DeviceAllow=/dev/triedb rw
LimitNOFILE=1048576
# Hugemem configs below
LimitMEMLOCK=infinity
ProtectKernelModules=no
ProtectKernelLogs=no

[Install]
WantedBy=multi-user.target
